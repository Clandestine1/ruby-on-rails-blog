<!--<h1 id="listtext">Listing articles</h1>-->
 
<button><%= link_to 'New article', new_article_path %></button>
<table id="formtable">
  <tr>
    <th style="color: deeppink; text-shadow: 2px 2px white; font-size: 48px;">Title <br> &#9830;</th>
      <th style="color: deeppink; text-shadow: 2px 2px white; font-size: 48px;">Text <br> &#9830;</th>
      <th colspan="3"></th>
    </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %> </td> 
   <td><%= article.text %> </td> 
      <br>
  </tr>
  <br>
    <tr>
    <td><button><%= link_to 'Show', article_path(article) %></button></td>
      <td><button><%= link_to 'Edit', edit_article_path(article) %></button></td>
      <td><button><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></button></td>
    </tr>

  
  <% end %>

  </table>